{
  "model_name": "handwritten_equation_solver",
  "description": "CNN-Transformer model for handwritten mathematical expression recognition",
  
  "data": {
    "dataset": "CROHME2019",
    "img_size": 128,
    "max_label_length": 100,
    "min_char_frequency": 1,
    "augment_training": true
  },
  
  "model": {
    "d_model": 512,
    "num_attention_heads": 8,
    "num_decoder_layers": 4,
    "feed_forward_dim": 2048,
    "dropout_rate": 0.1,
    "encoder_type": "CNN",
    "decoder_type": "Transformer"
  },
  
  "training": {
    "batch_size": 32,
    "epochs": 100,
    "learning_rate": "custom_schedule",
    "warmup_steps": 4000,
    "optimizer": "Adam",
    "optimizer_params": {
      "beta_1": 0.9,
      "beta_2": 0.98,
      "epsilon": 1e-9
    }
  },
  
  "callbacks": {
    "early_stopping_patience": 15,
    "reduce_lr_patience": 5,
    "reduce_lr_factor": 0.5,
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min"
  },
  
  "evaluation": {
    "metrics": [
      "exact_match_accuracy",
      "character_accuracy",
      "masked_loss",
      "masked_accuracy"
    ],
    "beam_search_width": 5
  }
}

